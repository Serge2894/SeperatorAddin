<Window x:Class="SeperatorAddin.Forms.DuctSelectionForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Select Levels for Duct Split"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" TextWrapping="Wrap">
            Select the levels where ducts should be split. The pre-selected ducts will be split at each chosen level.
        </TextBlock>

        <GroupBox Grid.Row="1" Header="Available Levels" Margin="0,10,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
                    <Button x:Name="SelectAllButton" Content="Select All" Padding="10,2" Click="SelectAllButton_Click"/>
                    <Button x:Name="DeselectButton" Content="Deselect" Padding="10,2" Margin="5,0,0,0" Click="DeselectButton_Click"/>
                </StackPanel>

                <ListBox x:Name="LevelsListBox" 
                         Grid.Row="1" 
                         SelectionMode="Extended" 
                         SelectionChanged="LevelsListBox_SelectionChanged"/>
            </Grid>
        </GroupBox>

        <TextBlock Grid.Row="2" x:Name="SelectionCountLabel" 
                   Text="0 levels selected" 
                   HorizontalAlignment="Left" 
                   Margin="5,5,0,10"
                   FontStyle="Italic"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="OkButton" Content="OK" IsDefault="True" Width="80" Height="25" Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button x:Name="CancelButton" Content="Cancel" IsCancel="True" Width="80" Height="25" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>