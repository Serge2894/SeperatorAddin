<Window x:Class="SeperatorAddin.Forms.frmVerticalSplit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Vertical Split" Height="550" Width="400"
        WindowStyle="None"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen"
        Topmost="True">

    <Window.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4CAF50"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#45A049"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CancelButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="30"/>
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#f44336"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#d32f2f"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#DDD" Padding="5" MouseDown="Border_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="STools - Vertical Split" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" HorizontalAlignment="Left" />
                <Button Grid.Column="1" Content="X" Width="25" Height="25" Padding="0"
                        FontWeight="Bold" FontSize="12" Background="Transparent" BorderThickness="0"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Click="btnClose_Click"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20,20,20,0">
                <TextBlock Text="Select elements to split:" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Columns" VerticalAlignment="Center" FontSize="14"/>
                    <TextBlock x:Name="ColumnCount" Text="0 selected" FontStyle="Italic" Grid.Column="1" VerticalAlignment="Center" Margin="10,0" HorizontalAlignment="Right"/>
                    <Button x:Name="SelectColumns" Content="Select" Grid.Column="2" Style="{StaticResource ActionButtonStyle}" Click="SelectColumns_Click" Width="70" Height="25" Padding="10,2"/>
                </Grid>
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Walls" VerticalAlignment="Center" FontSize="14"/>
                    <TextBlock x:Name="WallCount" Text="0 selected" FontStyle="Italic" Grid.Column="1" VerticalAlignment="Center" Margin="10,0" HorizontalAlignment="Right"/>
                    <Button x:Name="SelectWalls" Content="Select" Grid.Column="2" Style="{StaticResource ActionButtonStyle}" Click="SelectWalls_Click" Width="70" Height="25" Padding="10,2"/>
                </Grid>
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Ducts" VerticalAlignment="Center" FontSize="14"/>
                    <TextBlock x:Name="DuctCount" Text="0 selected" FontStyle="Italic" Grid.Column="1" VerticalAlignment="Center" Margin="10,0" HorizontalAlignment="Right"/>
                    <Button x:Name="SelectDucts" Content="Select" Grid.Column="2" Style="{StaticResource ActionButtonStyle}" Click="SelectDucts_Click" Width="70" Height="25" Padding="10,2"/>
                </Grid>
                <Grid Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Pipes" VerticalAlignment="Center" FontSize="14"/>
                    <TextBlock x:Name="PipeCount" Text="0 selected" FontStyle="Italic" Grid.Column="1" VerticalAlignment="Center" Margin="10,0" HorizontalAlignment="Right"/>
                    <Button x:Name="SelectPipes" Content="Select" Grid.Column="2" Style="{StaticResource ActionButtonStyle}" Click="SelectPipes_Click" Width="70" Height="25" Padding="10,2"/>
                </Grid>
            </StackPanel>

            <Border Grid.Row="1" Background="#FFFFFF" CornerRadius="5" Margin="20,15,20,20">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <CheckBox x:Name="cbSelectAll" Content="Select All Levels" 
                              Checked="cbSelectAll_Checked" 
                              Unchecked="cbSelectAll_Unchecked"
                              FontWeight="Bold"/>
                    </StackPanel>

                    <Border Grid.Row="1" 
                        BorderThickness="1" 
                        BorderBrush="#CCCCCC" 
                        Background="White"
                        CornerRadius="5">
                        <ListView x:Name="lvLevels" 
                              Background="Transparent"
                              BorderThickness="0"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                              SelectionMode="Extended">
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="2">
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}" 
                                              Margin="0,0,10,0"
                                              Checked="LevelCheckBox_Changed"
                                              Unchecked="LevelCheckBox_Changed"/>
                                        <TextBlock Text="{Binding DisplayName}" 
                                               VerticalAlignment="Center"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,15,15">
            <Button x:Name="Split" Content="Split" Style="{StaticResource ActionButtonStyle}" Click="Split_Click" Width="100" Margin="0,0,10,0"/>
            <Button x:Name="Cancel" Content="Cancel" Style="{StaticResource CancelButtonStyle}" Click="btnCancel_Click" Width="100"/>
        </StackPanel>
    </Grid>
</Window>